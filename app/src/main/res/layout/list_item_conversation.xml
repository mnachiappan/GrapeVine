<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="10dp"
              android:paddingBottom="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_conversation_textview"
        android:text="This is a full conversation! Really interesting conversation. You'll love this conversation."
        android:gravity="left"
        android:textStyle="bold"
        android:textSize="8pt"
        android:textColor="#000000"

        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingBottom="5dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_conversation_date"
            android:text="9:59PM"
            android:gravity = "start"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_conversation_author"
            android:text="BIG PENGUIN"
            android:layout_gravity = "right"
            android:gravity="right"
            android:textStyle="italic"
            />

    </LinearLayout>
</LinearLayout>